######################################################
#
# Inventory for the CSIR C4 cluster
#
############## Cluster oriented grouping ##############
##########################################################################################
# we define overall two clusters : production and development/staging/testing
# it is possible that we could separate the development and staging/testing clusters later
# Typically each production service has a corresponding dev version.
# BB 10/13
#############
# We also want to separate the site services from core services
# BB 11/13
# Removed a few services from inventory at this site.
# BB 01/16

# boss servers
[boss]
#ansible.c4.csir.co.za

# user interfaces
[UIs]
#ui-dev.c4.csir.co.za

##############
# core services #
##############

# credential stores
[myproxy-servers]
#myproxy.c4.csir.co.za

# information systems
[top-bdiis]
top-bdii.c4.csir.co.za  ansible_user=ansible emi_service='BDII_top' yaim_options='-n BDII_top' needs_certificate='false'

# workload management
[wms-servers]
wms.c4.csir.co.za ansible_user=ansible

# metadata catalogues
[lfc-servers]
#lfc.c4.csir.co.za

# file transfer
[fts-servers]
# fts.c4.csir.co.za

# Repositories
[cvmfs-stratum-0]
#apprepo.sagrid.ac.za needs_certificate='false'

# web user interface
[dirac]
# dirac.c4.csir.co.za needs_certificate='true'

# accounting
[apel-servers]
apel-server.c4.csir.co.za needs_certificate='true' ansible_user=ansible

# AAI
[voms-servers]
#voms-stage.c4.csir.co.za needs_certificate='true'
[argus-servers]
argus.c4.csir.co.za ansible_user=ansible emi_service='ARGUS_server' yaim_options='-n ARGUS_server' needs_certificate='true' needs_mysql="true"
[perun]
#perun.c4.csir.co.za
[CA]
#security.sanren.ac.za


# monitoring
[ngi-nagios]
nagios.c4.csir.co.za ansible_user=ansible emi_service='SAM-NAGIOS' yaim_option='-n NAGIOS -n SAM_NAGIOS'
#[vo-sagrid-nagios]
#sagrid-monitoring.c4.csir.co.za

