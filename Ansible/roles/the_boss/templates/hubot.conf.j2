#
# File: hubot.conf - Upstart configuration script for Hubot
#
# FIXME: This could use some improvement

description "hubot"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]
respawn
respawn limit 5 60

script
  exec sudo -i -u {{ hubot_admin }} {{ hubot_dir }}/bin/start-hubot
end script
